    <LatLonBox minx="-2000000"  miny="-2000000" maxx="10000000" maxy="8500000"/>
  </Projection>
  <Projection id="EPSG:54030" proj4="+proj=robin +lon_0=0 +x_0=0 +y_0=0 +ellps=WGS84 +datum=WGS84 +units=m +no_defs "/>
